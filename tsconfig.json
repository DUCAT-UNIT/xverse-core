{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "types/*": ["./types"],
      "currency/*": ["./currency"],
      "transactions/*": ["./transactions"],
      "wallet/*": ["./wallet"]
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}
